// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role  Role     @default(USER)
  profile Profile
}

enum Role {
  USER
  ADMIN
}

type Profile {
  firstName String
  lastName String
  profilePicture String?
}


model Exersice {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  title String
  category String
  fileContentType String
  fileName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags String
}

model Training {
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  title String
  category String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags String
  content String
  solution String
  contentImage String
  solutionImage String
  searchableTitle String?
}


model Video{
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  title String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags String[]
  description String
  creatorName String 
  url String
}