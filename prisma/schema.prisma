generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserProfile {
  firstName      String
  lastName       String
  profilePicture String?
}

model Exersice {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  category        String
  createdAt       DateTime @db.Date
  description     String?
  exerciseImgUrl  String?
  fileContentType String
  fileName        String
  tags            String
  title           String
  updatedAt       DateTime @db.Date
}

model Training {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  category        String
  content         String
  contentImage    String
  createdAt       DateTime @db.Date
  searchableTitle String
  solution        String
  solutionImage   String
  tags            String
  title           String
  updatedAt       DateTime @db.Date
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime    @db.Date
  email     String      @unique
  password  String
  profile   UserProfile
  role      String
  updatedAt DateTime    @db.Date
}

model Video {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  creatorName String
  description String
  tags        String[]
  title       String
  updatedAt   DateTime @db.Date
  url         String
}
